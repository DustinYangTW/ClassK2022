@model HomeBackProject.Models.PeopleData

@{
    ViewBag.Title = "Edit";
    if (Session["userID"] == null) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else if (Session["userRank"].ToString() != "4") { Layout = "~/Views/Shared/_Layout_LogInOut.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout_admin.cshtml"; }
    var checkGender = @ViewBag.Gender == "男" ? "true" : "false";
}


@using (Html.BeginForm("Edit", "PeopleDatas", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" , onsubmit = "return check_select()" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PeopleID)
    @Html.HiddenFor(model => model.AuthorizationTime)
    @Html.HiddenFor(model => model.PeopleCash)
    @Html.HiddenFor(model => model.SchemeName)

    <section class="h-90 h-custom gradient-custom-2">
        <div class="container py-5 h-90">
            <div class="row d-flex justify-content-center align-items-center h-90">
                <div class="col-12">

                    <h1 class="mb-md-5 text-center" style="text-shadow: 0.3em 0.2em 0.2em #FFAAAA ;">
                        修改會員資料
                    </h1>

                    <div class="card card-registration card-registration-2 shadow-lg" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">

                                <div class="col-lg-3 d-flex justify-content-center align-items-center mt-4 mb-4">
                                    <div class="row  ms-5">
                                        <div class="col-12 ms-2 mb-3">
                                            <span class="fs-5">現在照片 : </span>
                                        </div>
                                        <div class="col-12 ms-2 mb-3">
                                            <img src="@ViewBag.photoHeadShot" width="150" class="rounded-3 shadow" />
                                        </div>
                                        <div class="col-12 ms-2 mb-3" id="ChangePhoto">

                                        </div>
                                        <div class="col-12 ms-2 mb-3" id="ChangeNewPhoto">

                                        </div>
                                        <label for="inputGroupFile01" class="form-label fs-5">上傳修改會員照片</label>
                                        <input type="file" class="form-control form-control-lg mb-2" id="Photo01" name="photo" style="max-width: 100%">
                                    </div>
                                </div>

                                <article class="col-lg-9">
                                    <div class="p-5">
                                        <div class="row">
                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PeopleName, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        @Html.EditorFor(model => model.PeopleName, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "PeopleName", type = "text", id = "PeopleName", required = "required", @readonly = "readonly" } })
                                                    }
                                                    else
                                                    {
                                                        @Html.EditorFor(model => model.PeopleName, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "PeopleName", type = "text", id = "PeopleName", required = "required" } })
                                                    }
                                                    @Html.ValidationMessageFor(model => model.PeopleName, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.IdebtityNumber, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        @Html.EditorFor(model => model.IdebtityNumber, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "IdebtityNumber", type = "text", id = "IdebtityNumber", required = "required", @readonly = "readonly" } })
                                                    }
                                                    else
                                                    {
                                                        @Html.EditorFor(model => model.IdebtityNumber, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "IdebtityNumber", type = "text", id = "IdebtityNumber", required = "required" } })
                                                    }
                                                    @Html.ValidationMessageFor(model => model.IdebtityNumber, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "Birthday", type = "Date", id = "Birthday", required = "required", @readonly = "readonly" } })
                                                    }
                                                    else
                                                    {
                                                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "Birthday", type = "Date", id = "Birthday", required = "required" } })
                                                    }
                                                    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.EMail, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "EMail", type = "text", id = "EMail", required = "required", @readonly = "readonly" } })
                                                    }
                                                    else
                                                    {
                                                        @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "EMail", type = "text", id = "EMail", required = "required" } })
                                                    }
                                                    @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    <label class="form-label fs-5" for="Gender">性別</label>
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        <select class="form-select form-select-lg" name="Gender" id="Gender" disabled>
                                                            <option selected disabled style="display: none" value="@checkGender" id="Genderdel">@ViewBag.Gender</option>
                                                            <option value="true">男</option>
                                                            <option value="false">女</option>
                                                        </select>
                                                    }
                                                    else
                                                    {
                                                        <select class="form-select form-select-lg" name="Gender" id="Gender">
                                                            <option selected disabled style="display: none" value="@checkGender" id="Genderdel">@ViewBag.Gender</option>
                                                            <option value="true">男</option>
                                                            <option value="false">女</option>
                                                        </select>
                                                    }
                                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "PhoneNumber", type = "text", id = "PhoneNumber", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    <label class="form-label fs-5" for="selectCounty">縣市</label>
                                                    <select class="form-select form-select-lg" name="County" id="selectCounty" onchange="mainIdex()">
                                                        <option value="@ViewBag.countyIDlast">@ViewBag.countyTWlast</option>
                                                        @foreach (var item in ViewBag.countyID)
                                                        {
                                                            <option value="@item.CityIDTW">@item.CityTW</option>
                                                        }
                                                    </select>
                                                    @Html.ValidationMessageFor(model => model.County, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    <label class="form-label fs-5" for="selectCity">鄉鎮</label>
                                                    <select class="form-select form-select-lg" name="Town" id="selectCity">
                                                        <option selected value="@ViewBag.Townlast" title="@ViewBag.Townlast">@ViewBag.Townlast</option>
                                                    </select>
                                                    @Html.ValidationMessageFor(model => model.Town, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "CompanyName", type = "text", id = "CompanyName" } })
                                                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-8 mb-4 pb-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.RoadAndNumber, htmlAttributes: new { @class = "form-label fs-5" })
                                                    @Html.EditorFor(model => model.RoadAndNumber, new { htmlAttributes = new { @class = "form-control form-control-lg", name = "RoadAndNumber", type = "text", id = "RoadAndNumber", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.RoadAndNumber, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 mb-4 pb-2">
                                                <div class="form-group">
                                                    <label class="form-label fs-5" for="SaleStateID">會員身分</label>
                                                    @if (@ViewBag.Rank != 4)
                                                    {
                                                        <select class="form-select form-select-lg" name="SaleStateID" id="SaleStateID" required style="max-width:100%" disabled>
                                                            @foreach (var peopleRankData in ViewBag.SaleStateID)
                                                            {
                                                                if (peopleRankData.HomeTSaleStateID == @ViewBag.NowSaleStateID)
                                                                {
                                                                    <option value="@ViewBag.NowSaleStateID">@peopleRankData.PeopleRank</option>
                                                                }
                                                                if (@peopleRankData.PeopleRank != "管理員" && peopleRankData.HomeTSaleStateID != @ViewBag.NowSaleStateID)
                                                                {
                                                                    <option value="@peopleRankData.HomeTSaleStateID">@peopleRankData.PeopleRank</option>
                                                                }
                                                            }
                                                        </select>
                                                    }
                                                    else
                                                    {
                                                        <select class="form-select form-select-lg" name="SaleStateID" id="SaleStateID" required style="max-width:100%">
                                                            @foreach (var peopleRankData in ViewBag.SaleStateID)
                                                            {
                                                                if (peopleRankData.HomeTSaleStateID == @ViewBag.NowSaleStateID)
                                                                {
                                                                    <option value="@ViewBag.NowSaleStateID">@peopleRankData.PeopleRank</option>
                                                                }
                                                                if (@peopleRankData.PeopleRank != "管理員" && peopleRankData.HomeTSaleStateID != @ViewBag.NowSaleStateID)
                                                                {
                                                                    <option value="@peopleRankData.HomeTSaleStateID">@peopleRankData.PeopleRank</option>
                                                                }
                                                            }
                                                        </select>
                                                    }

                                                    <div class="invalid-feedback">
                                                        **必填欄位
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group d-flex justify-content-end">
                                            <input type="submit" value="修改" class="btn btn-danger btn-lg" />
                                            <a href="/PeopleDatas/DetailsMyself/@Model.PeopleID" class=" btn btn-primary btn-lg ms-4">返回上一頁</a>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


@section Script {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Js/FindCityData.js"></script>
    <script src="~/Js/Validation.js"></script>
    <script>
        $("#Photo01").change(() => {
            var oFReader = new FileReader();
            var file = document.getElementById('Photo01').files[0];
            oFReader.readAsDataURL(file);
            oFReader.onloadend = function (oFRevent) {
                var src = oFRevent.target.result;
                $('#NewPhoto01').attr('src', src);
                $('#ChangePhoto').empty();
                $('#ChangePhoto').append(`<span class="fs-5">更換照片 : </span>`);
                //ChangeNewPhoto
                //<img src="@ViewBag.photoHeadShot" width="150" class="rounded-3 shadow" id="NewPhoto01" />
                $('#ChangeNewPhoto').empty();
                $('#ChangeNewPhoto').append(`<img src="${src}" width="150" class="rounded-3 shadow" id="NewPhoto01" />`);
            }
        });

        function check_select(form) {
            if (confirm("確定要送出此資料嗎？")) {
                $("#Genderdel").removeAttr("disabled");
                $("#SaleStateID").removeAttr("disabled");
                return true;
            } else {
                return false;
            }
        }
    </script>


}
