        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeopleCash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorizationTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeopleRankData.PeopleRank)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramData.ProgramName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PeopleID }) |
            @Html.ActionLink("Details", "Details", new { id = item.PeopleID })
        </td>
    </tr>
}

</table>
