@model HomeBackProject.Models.HomeData

@{
    if (Session["userID"] == null) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else if (Session["userRank"].ToString() != "4") { Layout = "~/Views/Shared/_Layout_LogInOut.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout_admin.cshtml"; }
    ViewBag.Title = @Model.HomeName;
    var Floor = Model.HomeFloor == 0 ? "整棟" : (@Model.HomeFloor).ToString();
    var Sale = Model.HomeSaleAndLease == true ? "售" : "租";
}

<div class="container-fluid">
    <div class="col-md-12 mb-2 pb-2 mt-5 pt-5">
        <div class="fs-1 fw-bold text-center text-black" id="HomeName">
            @Html.DisplayFor(model => model.HomeName)
        </div>
    </div>
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-5  d-flex align-items-center justify-content-center">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="max-width:500px">
                        <div class="carousel-inner  rounded-3">
                            @foreach (var photo in @ViewBag.allPhoto)
                            {
                                <img src="@photo" class="carousel-item" />
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-lg-7 d-lg-flex align-items-lg-center">
                    <div class="row" style="width:100%">
                        <div class="p-3">
                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeMoney)
                                    </div>
                                    <div class="fs-2 ms-3 ps-4 mt-2 text-danger fw-bolder">
                                        @Html.DisplayFor(model => model.HomeMoney)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2  bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeSquareMeters)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeSquareMeters)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2 bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.CityTypeData.CityTW)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.CityTypeData.CityTW)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeTown)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeTown)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeTypeData.HomeTypeName)
                                    </div>
                                    <div class="fs-3 ms-3 ps-4 mt-2 text-danger fw-bolder">
                                        @Html.DisplayFor(model => model.HomeTypeData.HomeTypeName)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2 bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeAges)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeAges)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="fs-3">
                <div class="col-12 d-flex flex-column">
                    <div class="row section-t3">
                        <div class="col-sm-12">
                            <div class="title-box-d">
                                <h3 class="title-d"> 房屋詳細資料 &nbsp&nbsp <a href="https://www.google.com/maps/place/ @Model.CityTypeData.CityTW@Model.HomeTown@Model.HomeStreet" target="_blank"><span class="btn btn-info btn-lg shadow-lg"><i class="bi bi-map-fill"></i></span></a></h3>
                            </div>
                        </div>
                    </div>
                    <div class="row ps-4 ps-lg-0">
                        <div class="pt-3">
                            <div class="row ms-lg-3 mt-2">
                                <div class="col-md-5 mb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeFloor)
                                    </div>
                                    <div class="fs-5  ps-4 ms-3 ps-4 mt-2 mb-2">
                                        @Floor/@Html.DisplayFor(model => model.HomeHighFloor)
                                    </div>
                                </div>
                                <div class="col-md-3 mb-2 ps-lg-5">
                                    <div class="fs-4">
                                        單坪售價(萬)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.HomeMetersMoney)
                                    </div>
                                </div>
                                <div class="col-md-4 text-lg-center">
                                    <div class="fs-4">
                                        案件狀態
                                    </div>
                                    <div class="fs-3 ps-4 ms-3 mt-2 mb-2 text-danger fw-bolder">
                                        @Sale
                                    </div>
                                </div>
                            </div>
                            <div class="row ms-lg-3 mt-2 mt-lg-4">
                                <div class="col-md-5 mb-2">
                                    <div class="fs-4">
                                        房屋格局
                                    </div>
                                    <div class="fs-5 mt-2 mb-2">
                                        <div class="row ps-5 ps-lg-0 text-lg-center">
                                            <div class="col-lg-3">
                                                @Html.DisplayFor(model => model.HomeRoom) @Html.DisplayNameFor(model => model.HomeRoom)
                                            </div>
                                            <div class="col-lg-3">
                                                @Html.DisplayFor(model => model.HomeHall) @Html.DisplayNameFor(model => model.HomeHall)
                                            </div>
                                            <div class="col-lg-3">
                                                @Html.DisplayFor(model => model.HomeBathroom) @Html.DisplayNameFor(model => model.HomeBathroom)
                                            </div>
                                            <div class="col-lg-3">
                                                @Html.DisplayFor(model => model.HomeBalcony) @Html.DisplayNameFor(model => model.HomeBalcony)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-2 ps-lg-5">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeManageTip)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.HomeManageTip)
                                    </div>
                                </div>
                                <div class="col-md-4 text-lg-center">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.CarTypeData.CarTypeName)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.CarTypeData.CarTypeName)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="fs-3">
                <div class="col-12 d-flex flex-column">
                    <div class="row section-t3">
                        <div class="col-sm-12">
                            <div class="title-box-d">
                                <h3 class="title-d">@Html.DisplayNameFor(model => model.HomeFeatures)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="fs-4 mt-2">
                        @if (@Model.HomeFeatures != null)
                        {
                            @Html.Raw(@Model.HomeFeatures.ToString().Replace("\n", "<br />"))
                        }
                        else
                        {

                        }
                    </div>
                </div>
            </div>
            <hr />
            <div class="fs-3">
                <div class="col-12 d-flex flex-column">
                    <div class="  fw-bolder">

                    </div>
                    <div class="fs-4">

                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="row section-t3">
                    <div class="col-sm-12">
                        <div class="title-box-d">
                            <h3 class="title-d">預約看房</h3>
                        </div>
                    </div>
                </div>
                <div class="row d-flex align-items-center">
                    <div class="col-md-6 col-lg-4 d-flex justify-content-center">
                        <img src="@ViewBag.Peoplephoto" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="property-agent">
                            <h4 class="title-agent">@ViewBag.People.PeopleName</h4>
                            <p class="color-text-a">
                                如果有喜歡看的房屋
                                <br />
                                請跟我預約看房
                                <br />
                                如果有要找優惠也是找我
                            </p>
                            <ul class="list-unstyled">
                                <li class="d-flex justify-content-between">
                                    <strong>手機號碼:</strong>
                                    <span class="color-text-a">@ViewBag.People.PhoneNumber</span>
                                </li>
                                <li class="d-flex justify-content-between">
                                    <strong>電子信箱:</strong>
                                    <span class="color-text-a" id="EMail">@ViewBag.People.EMail</span>
                                </li>
                            </ul>
                            <div class="socials-a">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="bi bi-facebook" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="bi bi-twitter" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="bi bi-instagram" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#">
                                            <i class="bi bi-linkedin" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <div class="property-contact">
                            <form class="form-a" id="userAddFrom">
                                <div class="row">
                                    <div class="col-md-12 mb-1">
                                        <div class="form-group" id="userName">
                                            <input type="text" class="form-control form-control-lg form-control-a" id="name" name="name" placeholder="姓名 *" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-1" id="userphone">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-lg form-control-a" id="phone" name="phone" placeholder="電話 *" required>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <button type="button" class="btn btn-a">預約看房</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <section class="section-property">
                <div class="container">
                    <div class="row">
                        <div class="row section-t3">
                            <div class="col-sm-12">
                                <div class="title-box-d">
                                    <h3 class="title-d">依照你習慣，推薦的房屋</h3>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div id="property-carousel" class="swiper">
                        <div class="swiper-wrapper d-flex align-items-center">

                            @for (int i = 0; i < @ViewBag.MidhomeDatasCount; i++)
                            {
                                <div class="carousel-item-b swiper-slide">
                                    <div class="card-box-a card-shadow">
                                        <div class="img-box-a d-flex justify-content-center">
                                            <img src="@ViewBag.Midphotos[i]" alt="" class="img-a img-fluid">
                                        </div>
                                        <div class="card-overlay">
                                            <div class="card-overlay-a-content">
                                                <div class="card-header-a">
                                                    <h2 class="card-title-a">
                                                        <a href="/HomeDatas/Details/@ViewBag.MidhomeDatas[i].HomeID" target=_blank>
                                                            @ViewBag.MidhCity[i] , @ViewBag.MidhomeDatas[i].HomeTown
                                                            <br />  @ViewBag.MidhomeDatas[i].HomeName
                                                        </a>
                                                    </h2>
                                                </div>
                                                <div class="card-body-a">
                                                    <div class="price-box d-flex">
                                                        <span class="price-a">售價 | $ @ViewBag.MidhomeDatas[i].HomeMoney 萬起</span>
                                                    </div>
                                                    <a href="/HomeDatas/Details/@ViewBag.MidhomeDatas[i].HomeID" class="link-a" target=_blank>
                                                        點我看詳細資料
                                                        <span class="bi bi-chevron-right"></span>
                                                    </a>
                                                </div>
                                                <div class="card-footer-a">
                                                    <ul class="card-info d-flex justify-content-around">
                                                        <li>
                                                            <h4 class="card-info-title">面積</h4>
                                                            <span>
                                                                @ViewBag.MidhomeDatas[i].HomeSquareMeters 坪
                                                                @*<sup>2</sup>*@
                                                            </span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title">房間</h4>
                                                            <span>@ViewBag.MidhomeDatas[i].HomeRoom</span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title">廳</h4>
                                                            <span>@ViewBag.MidhomeDatas[i].HomeHall</span>
                                                        </li>
                                                        <li>
                                                            <h4 class="card-info-title">衛浴</h4>
                                                            <span>@ViewBag.MidhomeDatas[i].HomeBathroom</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>




@section Script {
    <script>
        $("img:nth-child(1)").addClass("active");
    </script>
}
