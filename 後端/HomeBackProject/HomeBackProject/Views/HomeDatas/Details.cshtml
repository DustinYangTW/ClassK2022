@model HomeBackProject.Models.HomeData

@{
    if (Session["userID"] == null) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else if (Session["userRank"].ToString() != "4") { Layout = "~/Views/Shared/_Layout_LogInOut.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout_admin.cshtml"; }
    ViewBag.Title = @Model.HomeName;
    var Floor = Model.HomeFloor == 0 ? "整棟" : (@Model.HomeFloor).ToString();
    var Sale = Model.HomeSaleAndLease == true ? "售" : "租";
}

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-lg-2">
            廣告
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-5  d-lg-flex align-items-lg-center">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="max-width:500px">
                        <div class="carousel-inner  rounded-3">
                            @foreach (var photo in @ViewBag.allPhoto)
                            {
                                <img src="@photo" class="carousel-item" />
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-lg-7 d-lg-flex align-items-lg-center">
                    <div class="row" style="width:100%">
                        <div class="p-3">
                            <div class="col-md-12 mb-2 pb-2">
                                <div class="fs-1 text-center text-black">
                                    @Html.DisplayFor(model => model.HomeName)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeMoney)
                                    </div>
                                    <div class="fs-2 ms-3 ps-4 mt-2 text-danger fw-bolder">
                                        @Html.DisplayFor(model => model.HomeMoney)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2  bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeSquareMeters)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeSquareMeters)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2 bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.CityTypeData.CityTW)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.CityTypeData.CityTW)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeTown)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeTown)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2 pb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.SaleTypeData.SaleState)
                                    </div>
                                    <div class="fs-3 ms-3 ps-4 mt-2 text-danger fw-bolder">
                                        @Html.DisplayFor(model => model.SaleTypeData.SaleState)
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 pb-2 bg-brown">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeAges)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2">
                                        @Html.DisplayFor(model => model.HomeAges)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="fs-3">
                <div class="col-12 d-flex flex-column">
                    <div class=" fw-bolder">
                        房屋詳細資料
                    </div>
                    <div class="row">
                        <div class="p-lg-5 pt-3">
                            <div class="row ps-lg-5 ms-lg-3 mt-2">
                                <div class="col-md-4 mb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeFloor)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Floor/@Html.DisplayFor(model => model.HomeHighFloor)
                                    </div>
                                </div>                        
                                <div class="col-md-4 mb-2">
                                    <div class="fs-4">
                                        單坪售價(萬)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.HomeMetersMoney)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="fs-4">
                                        案件狀態
                                    </div>
                                    <div class="fs-3 ms-3 mt-2 mb-2 text-danger fw-bolder">
                                        @Sale
                                    </div>
                                </div>
                            </div>
                            <div class="row ps-lg-5 ms-lg-3 mt-2 mt-lg-4">
                                <div class="col-md-4 mb-2 pe-lg-5">
                                    <div class="fs-4">
                                        房屋格局
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.HomeRoom) @Html.DisplayNameFor(model => model.HomeRoom) &nbsp&nbsp
                                        @Html.DisplayFor(model => model.HomeHall) @Html.DisplayNameFor(model => model.HomeHall) &nbsp&nbsp
                                        @Html.DisplayFor(model => model.HomeBathroom) @Html.DisplayNameFor(model => model.HomeBathroom) &nbsp&nbsp
                                        @Html.DisplayFor(model => model.HomeBalcony) @Html.DisplayNameFor(model => model.HomeBalcony)
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.HomeTypeData.HomeTypeName)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.HomeTypeData.HomeTypeName)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="fs-4">
                                        @Html.DisplayNameFor(model => model.CarTypeData.CarTypeName)
                                    </div>
                                    <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                        @Html.DisplayFor(model => model.CarTypeData.CarTypeName)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="fs-3">
                <div class="col-12 d-flex flex-column">
                    <div class="  fw-bolder">
                        @Html.DisplayNameFor(model => model.HomeFeatures)

                    </div>
                    <div class="fs-4" style="text-indent: 2.5em;">
                        @Html.DisplayFor(model => model.HomeFeatures)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            廣告
        </div>
    </div>
</div>

