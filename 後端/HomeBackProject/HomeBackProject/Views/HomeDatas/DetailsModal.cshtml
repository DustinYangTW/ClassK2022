@model HomeBackProject.Models.HomeData

@{
    Layout = "";
    ViewBag.Title = @Model.HomeName;
    var Floor = Model.HomeFloor == 0 ? "整棟" : (@Model.HomeFloor).ToString();
    var Sale = Model.HomeSaleAndLease == true ? "售" : "租";
}

<div class="container">

    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-5  d-flex align-items-center justify-content-center">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="max-width:500px">
                    <div class="carousel-inner  rounded-3">
                        @foreach (var photo in @ViewBag.allPhoto)
                        {
                            <img src="@photo" class="carousel-item" />
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-7 d-lg-flex align-items-lg-center">
                <div class="row" style="width:100%">
                    <div class="p-3">
                        <div class="row">
                            <div class="col-md-6 mb-2 pb-2">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeMoney)
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2 text-danger fw-bolder">
                                    @Html.DisplayFor(model => model.HomeMoney)
                                </div>
                            </div>
                            <div class="col-md-6 mb-2 pb-2  bg-brown">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeSquareMeters)
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2">
                                    @Html.DisplayFor(model => model.HomeSquareMeters)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-2 pb-2 bg-brown">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.CityTypeData.CityTW)
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2">
                                    @Html.DisplayFor(model => model.CityTypeData.CityTW)
                                </div>
                            </div>
                            <div class="col-md-6 mb-2 pb-2">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeTown)
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2">
                                    @Html.DisplayFor(model => model.HomeTown)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 mb-2 pb-2">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.HomeStreet)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.HomeStreet)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-2 pb-2">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.SaleTypeData.SaleState)
                                </div>
                                <div class="fs-3 ms-3 ps-4 mt-2 text-danger">
                                    @Html.DisplayFor(model => model.SaleTypeData.SaleState)
                                </div>
                            </div>
                            <div class="col-md-6 mb-2 pb-2 bg-brown">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeAges)
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2">
                                    @Html.DisplayFor(model => model.HomeAges)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-2 pb-2 bg-brown">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeFloor)
                                </div>
                                <div class="fs-5  ps-4 ms-3 ps-4 mt-2 mb-2">
                                    @Floor/@Html.DisplayFor(model => model.HomeHighFloor)
                                </div>
                            </div>
                            <div class="col-md-6 mb-2 pb-2">
                                <div class="fs-4">
                                    租/售
                                </div>
                                <div class="fs-5 ms-3 ps-4 mt-2 mb-2">
                                    @Sale
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-2 pb-2">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.HomeTypeData.HomeTypeName)
                                </div>
                                <div class="fs-5  ps-4 ms-3 ps-4 mt-2 mb-2">
                                    @Html.DisplayFor(model => model.HomeTypeData.HomeTypeName)
                                </div>
                            </div>      
                            <div class="col-md-6 mb-2 pb-2 bg-brown">
                                <div class="fs-4">
                                    @Html.DisplayNameFor(model => model.CarTypeData.CarTypeName)
                                </div>
                                <div class="fs-5  ps-4 ms-3 ps-4 mt-2 mb-2">
                                    @Html.DisplayFor(model => model.CarTypeData.CarTypeName)
                                </div>
                            </div>

                        </div>

                        <div class="col-md-12 mb-2 pb-2">
                            <div class="fs-4">
                                房屋格局
                            </div>
                            <div class="fs-5">
                                <div class="row ps-5 ps-lg-0 text-lg-center">
                                    <div class="col-lg-3">
                                        @Html.DisplayFor(model => model.HomeRoom) @Html.DisplayNameFor(model => model.HomeRoom)
                                    </div>
                                    <div class="col-lg-3">
                                        @Html.DisplayFor(model => model.HomeHall) @Html.DisplayNameFor(model => model.HomeHall)
                                    </div>
                                    <div class="col-lg-3">
                                        @Html.DisplayFor(model => model.HomeBathroom) @Html.DisplayNameFor(model => model.HomeBathroom)
                                    </div>
                                    <div class="col-lg-3">
                                        @Html.DisplayFor(model => model.HomeBalcony) @Html.DisplayNameFor(model => model.HomeBalcony)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $("img:nth-child(1)").addClass("active");
</script>

