
@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else if (Session["userRank"].ToString() != "4") { Layout = "~/Views/Shared/_Layout_LogInOut.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout_admin.cshtml"; }
}

<div class="container-fluid">
    <!-- ======= Intro Section ======= -->
    <div class="intro intro-carousel swiper position-relative">
        <div class="swiper-wrapper">
            @for (int i = 0; i < @ViewBag.HighhomeDatasCount; i++)
            {
                <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url(@ViewBag.Highphotos[i])">

                    <div class="overlay overlay-a"></div>
                    <div class="intro-content display-table">
                        <div class="table-cell">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="intro-body">
                                            <p class="intro-title-top">
                                                @ViewBag.HighCity[i] , @ViewBag.HighhomeDatas[i].HomeTown
                                            </p>
                                            <h1 class="intro-title mb-4 ">
                                                <span class="color-b">黃金熱搜</span>
                                                <br> @ViewBag.HighhomeDatas[i].HomeName
                                            </h1>
                                            <p class="intro-subtitle intro-price">
                                                <a href="/HomeDatas/Details/@ViewBag.HighhomeDatas[i].HomeID" target=_blank><span class="price-a">售價 | $ @ViewBag.HighhomeDatas[i].HomeMoney 萬起</span></a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="swiper-pagination"></div>
    </div>
    <!-- End Intro Section -->
</div>


