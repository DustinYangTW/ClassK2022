@model HomeBackProject.ViewModel.VMLogin

@{
    ViewBag.Title = "會員登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="container d-flex justify-content-center mb-2">
        <h2>會員登入</h2>
    </div>
    <hr class="mt-2" />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <section class="container-fluid mx-auto p-5 row">
            <form action="~/LogInOut/Login" method="post">
                <div class="col-6 bg-dark  bg-opacity-25 rounded-3">
                    <div class="d-flex flex-column align-items-center">
                        <div class="mb-3 mt-3">
                            <label for="exampleInputEmail1" class="form-label">使用者帳號(電子信箱)</label>
                            <input type="email" class="form-control fs-6 pe-5" id="exampleInputEmail1" aria-describedby="emailHelp" name="EmailAccount" placeholder="abc@gmail.com">
                            @*<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>*@
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">密碼</label>
                            <input type="password" class="form-control fs-6 pe-5" id="exampleInputPassword1" name="PassWord">
                        </div>
                        <div class="me-5">
                            <div class="me-5">
                                <div class="mb-1 form-check me-2">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">記住我</label>
                                </div>
                                <div class="text-danger fs-6 mb-2">
                                    @ViewBag.ErrMsg
                                </div>
                                <div class="mb-3">
                                    <input type="submit" value="登入" class="btn btn-warning" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-6 d-flex justify-content-center align-items-center bg-info  bg-opacity-25 rounded-3">
                <div class="d-flex justify-content-center align-items-center p-5 bg-light bg-opacity-25 shadow-lg rounded-3">
                    <div>還沒加入會員嗎?</div>
                    <div>
                        @Html.ActionLink("點我加入", "Create", "PeopleDatas", new { }, new { @class = "btn btn-warning ms-2" })
                    </div>
                </div>
            </div>
        </section>

    }

    <div class="d-flex justify-content-end align-items-end mt-4">

        @Html.ActionLink("回到上一頁", "Index", new { }, new { @class = "btn btn-primary" })
    </div>
</div>
@section Script {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}