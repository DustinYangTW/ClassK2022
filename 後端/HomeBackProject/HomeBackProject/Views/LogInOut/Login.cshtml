@model HomeBackProject.ViewModel.VMLogin

@{
    ViewBag.Title = "會員登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <section class="container pt-5 mt-3">
                <div class="row">
                    <div class="col-sm-6 text-black d-flex justify-content-center">
                        @*<div class="px-5 ms-xl-4 mb-5 pb-5">
                            <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                            <span class="h1 fw-bold mb-0">綠園屋網</span>
                        </div>*@
                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 flex-column pt-xl-5 mt-xl-5">

                            <form style="width: 23rem;" action="~/LogInOut/Login" method="post">

                                <h3 class="fw-normal mb-3 pb-3 mb-xl-3 pb-xl-3" style="letter-spacing: 1px;">會員登入</h3>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example18">會員帳號(Email)</label>
                                    <input type="email" id="form2Example18" class="form-control form-control-lg" name="EmailAccount" placeholder="abc@gmail.com"/>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example28">密碼</label>
                                    <input type="password" id="form2Example28" class="form-control form-control-lg"  name="PassWord"/>
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-info btn-lg btn-block" type="submit">登入</button>
                                </div>

                                <div class="text-danger fs-6 mb-2">
                                    @ViewBag.ErrMsg
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">忘記密碼?</a></p>
                                <p>您沒有帳號嗎? <a href="~/PeopleDatas/Create" class="link-info">加入會員</a></p>

                            </form>
                        </div>
                    </div>
                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <img src="https://images.pexels.com/photos/2462015/pexels-photo-2462015.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
                             alt="Login image" class="w-0 vh-60 rounded-3 shadow-lg" style="object-fit: cover; object-position: left;">
                    </div>
                </div>
        </section>
    }

    @*<div class="d-flex justify-content-end align-items-end mt-4">

        @Html.ActionLink("回到上一頁", "Index", new { }, new { @class = "btn btn-primary" })
    </div>*@
</div>
@section Script {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}