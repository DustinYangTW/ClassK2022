
@{
    ViewBag.Title = "Index";
    if (Session["userID"] == null) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else if (Session["userRank"].ToString() != "4") { Layout = "~/Views/Shared/_Layout_LogInOut.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout_admin.cshtml"; }
}

<div class="h-indexLogen">
    <div class="container d-flex flex-column align-items-center h-100 justify-content-center mt-5 mt-lg-0">
        <div class="mb-3 mb-lg-8">
            <div class="fs-3">
                歡迎 &nbsp; <span class="fs-2">@Session["userNmae"]</span> &nbsp; 使用本系統 <span class="text-danger fw-bold"> ‼︎ ‼︎</span>
            </div>
        </div>
        <div class="col-lg-10 text-center">
            <div class="fs-3 mb-3">
                快速移動
            </div>

            @if (Session["userRank"].ToString() == "4")
            {


                <div class="row">
                    <div class="col-lg mb-2">
                        <a class="btn btn-outline-info btn-lg" href="~/PeopleDatas/Index">&nbsp;&nbsp;&nbsp;&nbsp;會員資料&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>

                    <div class="col-lg mb-2">
                        <a class=" btn btn-outline-success btn-lg" href="~/HomeDatas/Index">&nbsp;&nbsp;&nbsp;&nbsp;房屋資料&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>

                    <div class="col-lg mb-2">
                        <a class=" btn btn-outline-dark btn-lg" href="~/OthersSet/index">&nbsp;&nbsp;&nbsp;相關其他設定&nbsp;&nbsp;&nbsp;</a>
                    </div>
                    <div class="col-lg mb-2">
                        <a class=" btn btn-outline-warning btn-lg" href="~/LogInOut/Logout">&nbsp;&nbsp;&nbsp;&nbsp;登出&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg mb-2">
                        <a class="btn btn-outline-info btn-lg" href="~/PeopleDatas/Index">&nbsp;&nbsp;&nbsp;&nbsp;會員資料&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>

                    <div class="col-lg mb-2">
                        <a class=" btn btn-outline-success btn-lg" href="~/HomeDatas/Index">&nbsp;&nbsp;&nbsp;&nbsp;房屋資料&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>

                    <div class="col-lg mb-2">
                        <a class=" btn btn-outline-warning btn-lg" href="~/LogInOut/Logout">&nbsp;&nbsp;&nbsp;&nbsp;登出&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
