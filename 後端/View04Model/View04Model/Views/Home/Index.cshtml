@*@model IEnumerable<View04Model.Models.tEmployee>*@
@model View04Model.ViewModels.VMEmpoyee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>公司員工資料管理</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <h1 class="text-center well">公司員工資料管理</h1>
        <div class="row">
            <div class="col-xs-3">
                <p class="alert alert-success text-center">部門</p>
                <ul class="list-group">
                    @foreach (var item in Model.department)
                    {
                        <li class="list-group-item text-center">@Html.ActionLink(item.fDepName, "Index", new { depId = item.fDepId })</li>
                    }
                </ul>
            </div>
            <div class="col-xs-9">
                <p class="alert alert-info text-center">@(ViewBag.deptName)的員工資料</p>
                <p class="text-right">
                    @Html.ActionLink("新增員工資料", "Create", new { depId = ViewBag.depID })
                </p>
                @if (Model.employee.Count == 0)
                {
                    <h3 class="text-danger text-center">該部門目前尚未有員工資料</h3>
                }
                else
                {
                    <table class="table text-center table-hover">
                        <tr>
                            <td>工號</td>
                            <td>姓名</td>
                            <td>電話</td>
                            <td>刪除</td>
                        </tr>
                        @foreach (var item in Model.employee)
                        {
                            <tr>
                                <td>
                                    @item.fEmpId
                                </td>
                                <td>
                                    @item.fName
                                </td>
                                <td>
                                    @item.fPhone
                                </td>
                                <td>
                                    @*<a href="Delete/item.fEmpId" class="btn btn-danger btn-sm" onclick="return confirm('您確定要刪除 @(item.fName) 嗎?')">刪除</a>*@
                                    @Html.ActionLink("刪除", "Delete", new {id = item.fEmpId }, new {@class="btn btn-danger btn-sm", onclick="return confirm('您確定要刪除 "+item.fName+" 嗎?')" })
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</body>
</html>
