@*@model IEnumerable<View04Model.Models.tEmployee>*@
@model View04Model.ViewModels.VMEmpoyee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" border="1">
        <tr>
            <td>
                部門
                <ul>
                    @foreach (var item in Model.department)
                    {
                    <li>@Html.ActionLink(item.fDepName, "Index", new { depId = item.fDepId})</li>
                    }
                </ul>
            </td>
            <td>
                員工資料
                <ul>
                    @foreach (var item in Model.employee)
                    {
                        <li>@item.fEmpId @item.fName @item.fPhone</li>
                    }
                </ul>
            </td>
        </tr>
    </table>
</body>
</html>
