@model HomeBackProject.Models.PeopleData

@{
    ViewBag.Title = "Details";
    Layout = "";
}


<div class="container">
    <div class="row">


        <div class="col-lg-5 d-flex justify-content-center align-items-center">
            <img src="@ViewBag.photoHeadShot" width="400" class="rounded-3 shadow" />
        </div>


        <div class="col-lg-7 d-flex justify-content-center text-black">

            <div class="row" style="width:100%">
                <div class="p-3">
                    <div class="row">
                        <div class="col-md-6 mb-2 pb-2 bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.PeopleName)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.PeopleName)
                            </div>
                        </div>

                        <div class="col-md-6 mb-2 pb-2">
                            <div class="fs-4">
                                身份證後4碼
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.IdebtityNumber).ToString().Substring(6)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2 pb-2">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.Birthday)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.Birthday)
                            </div>
                        </div>

                        <div class="col-md-6 mb-2 pb-2 bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-6 mb-2 pb-2 bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.CityTypeData.CityTW)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.CityTypeData.CityTW)
                            </div>
                        </div>

                        <div class="col-md-6 mb-2 pb-2">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.Town)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.Town)
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2 pb-2">
                            <div class="fs-4">
                                會員帳號(信箱)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2 text-primary">
                                @Html.DisplayFor(model => model.EMail)
                            </div>
                        </div>

                        <div class="col-md-6 mb-2 pb-2 bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.PeopleCash)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.PeopleCash)
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-6 mb-2 pb-2  bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.PeopleRankData.PeopleRank)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @Html.DisplayFor(model => model.PeopleRankData.PeopleRank)
                            </div>
                        </div>

                        <div class="col-md-6 mb-2 pb-2">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @ViewBag.CompanyName
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6 pb-2">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.ProgramData.ProgramName)
                            </div>
                            <div class="fs-5 ms-3 ps-4 mt-2">
                                @if (Model.SchemeName > 0)
                                {
                                    @Html.DisplayFor(model => model.ProgramData.ProgramName)
                                }
                                else
                                {
                                    <span>尚未購買相關方案</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-6 pb-2 bg-brown">
                            <div class="fs-4">
                                @Html.DisplayNameFor(model => model.AuthorizationTime)
                            </div>
                            <div class="fs-5 ms-3 ps-4 ">

                                @if (Model.AuthorizationTime != null)
                                {
                                    @Html.DisplayFor(model => model.AuthorizationTime)
                                }
                                else
                                {
                                    <span>尚未購買相關方案</span>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>